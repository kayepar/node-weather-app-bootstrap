<body>
    <div class="d-flex flex-column overflow-hidden min-vh-100 vh-100">
        {{>header}}
        {{{body}}}
        {{>footer}}
    </div>
    <script>
        $(document).ready(function () {
            const url = location.href;
            const page = url.substring(url.lastIndexOf("/"), url.length);
            const navbar = Array.from(document.querySelectorAll('#menu>li'));

            document.getElementById('menu');
            if (page === '/') {
                navbar[0].classList.add('active');
            } else if (page === '/about') {
                navbar[1].classList.add('active');
            } else if (page === '/help') {
                navbar[2].classList.add('active');
            }
        });
    </script>
</body>

